<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg"
    android:fillViewport="true"
    tools:context=".activity.Activity4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3327582155652875/9895512295">
        </com.google.android.gms.ads.AdView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="400sp"
                    android:layout_height="60sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView4"
                    android:layout_centerInParent="true"
                    android:padding="30dp">

                    <RelativeLayout
                        android:id="@+id/layout4_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp">

                        <RelativeLayout
                            android:id="@+id/layout4_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bigbox">

                            <EditText
                                android:id="@+id/e4_0"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_toRightOf="@+id/e4_0"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_0"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_1"
                                android:layout_toRightOf="@+id/e4_4"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/layout4_0"
                            android:background="@drawable/bigbox">


                            <EditText
                                android:id="@+id/e4_2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_toRightOf="@+id/e4_2"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_2"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_3"
                                android:layout_toRightOf="@+id/e4_6"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout4_23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout4_01"
                        android:layout_centerInParent="true">

                        <RelativeLayout
                            android:id="@+id/layout4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bigbox">

                            <EditText
                                android:id="@+id/e4_8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_9"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_toRightOf="@+id/e4_8"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_12"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_8"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_13"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_9"
                                android:layout_toRightOf="@+id/e4_12"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/layout4_2"
                            android:background="@drawable/bigbox">

                            <EditText
                                android:id="@+id/e4_10"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_11"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_toRightOf="@+id/e4_10"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_14"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_10"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/e4_15"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@+id/e4_11"
                                android:layout_toRightOf="@+id/e4_14"
                                android:background="@drawable/eachbox"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                    //btn

                    <RelativeLayout
                        android:id="@+id/layout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout4_23"
                        android:layout_centerInParent="true">

                        <Button
                            android:id="@+id/solve4_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/clear4_btn"
                            android:background="@drawable/solvebutton"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:id="@+id/clear4_btn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/clearbutton"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/konfettiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</ScrollView>